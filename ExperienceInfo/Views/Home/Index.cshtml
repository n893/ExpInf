@{
    ViewBag.Title = "Welcome";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
            <p>
                If you are IT specialist - fill your professional skills @Html.ActionLink("here", "Index", "UserSkills").
            </p>
	        <p>
		        If you have manager account - you`re allowed to @Html.ActionLink("create & edit", "Index", "SkillManaging") skills, and @Html.ActionLink("search", "Index", "Search") for users that satisfy your requirements. 
	        </p>
			@if (!string.IsNullOrWhiteSpace(ViewBag.TopUser))
			{
				<p>
					"Top-skilled" user of the site is @ViewBag.TopUser. He's on top for already @ViewBag.TopDays day(s)!
				</p>
			}
        </div>
    </section>
}
